float fbm( in vec2 x, in float H )
{    
    float G = exp2(-H);
    float f = 1.0;
    float a = 1.0;
    float t = 0.0;
    for( int i=0; i<8; i++ )
    {
        t += a*perlin(f*x,2);
        f *= 2.0;
        a *= G;
    }
    return t;
}

float pattern (in vec2 p)
{
    vec2 q = vec2( fbm( p + vec2(time/100,0.0),1 ),
                   fbm( p + vec2(5.2,1.3),1 ) );

    return fbm( p + 4.0*q, 1 );
}

